generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

/// Usuário geral (admin, gerente, cliente)
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         Role
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Cliente
  customer     Customer?

  // Loja
  store        Store? @relation("StoreManagers")

  transactions Transaction[]
  payments     Payment[]
}

enum Role {
  ADMIN
  GERENTE
  CLIENTE
}

/// Loja
model Store {
  id        String     @id @default(uuid())
  name      String
  createdAt DateTime   @default(now())

  managers  User[]     @relation("StoreManagers")
  products  Product[]
  customers Customer[]
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  store     Store    @relation(fields: [storeId], references: [id])
  storeId   String
}

/// Cliente vinculado a uma loja
model Customer {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique

  store      Store    @relation(fields: [storeId], references: [id])
  storeId    String

  creditLimit Float
  balance     Float    @default(0)
  dueDay      Int      // dia de vencimento

  transactions Transaction[]
  invoices     Invoice[]
}

/// Transações/Compras
model Transaction {
  id          String     @id @default(uuid())
  amount      Float
  createdAt   DateTime   @default(now())
  customer    Customer   @relation(fields: [customerId], references: [id])
  customerId  String
  user        User       @relation(fields: [userId], references: [id])
  userId      String
}

/// Fatura
model Invoice {
  id          String     @id @default(uuid())
  month       Int
  year        Int
  total       Float
  paid        Boolean    @default(false)
  dueDate     DateTime
  createdAt   DateTime   @default(now())

  customer    Customer   @relation(fields: [customerId], references: [id])
  customerId  String

  payments    Payment[]
}

/// Pagamentos
model Payment {
  id        String   @id @default(uuid())
  amount    Float
  date      DateTime @default(now())

  invoice   Invoice  @relation(fields: [invoiceId], references: [id])
  invoiceId String

  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
